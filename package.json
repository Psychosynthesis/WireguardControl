{
  "name": "wg-control",
  "version": "1.0.0",
  "description": "Another flexable Wireguard web-interface",
  "main": "dist/server.js",
  "license": "MIT",
  "private": true,
  "type": "module",
  "dependencies": {
    "@gratio/crypt": "^1.0.7",
    "boma": "^1.0.1",
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "express": "^4.17.1",
    "jsonwebtoken": "^8.5.1",
    "vanicom": "^1.1.1"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.9",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "nodemon": "^2.0.15",
    "prettier": "3.5.3",
    "tsc-alias": "^1.8.14",
    "typescript": "^5.8.2"
  },
  "scripts": {
    "dev": "nodemon --watch '.' --ext 'js,ts,json' --exec \"cross-env NODE_ENV=development && tsc && tsc-alias && node ./dist/server.js\"",
    "start": "cross-env NODE_ENV=production node ./dist/server.js",
    "style": "prettier --write '{middlewares,routes,services,utils}/**/*.ts' --cache -l",
    "build": "npm run style && tsc && tsc-alias"
  },
  "prettier": {
    "trailingComma": "es5",
    "tabWidth": 2,
    "semi": true,
    "singleQuote": true,
    "printWidth": 140,
    "quoteProps": "consistent",
    "bracketSpacing": true,
    "bracketSameLine": true,
    "arrowParens": "avoid"
  }
}
